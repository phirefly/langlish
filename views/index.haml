  %body
    %header.section
      .w-container
        .w-row
          .w-col.w-col-4.subfooter-left
            .app-name LANGLISH
          .w-col.w-col-8.nav-column
            %a.nav-link{href: "#page-nav-organize", target: "_self"} TRANSLATE
            %a.nav-link{href: "#page-nav-display", target: "_self"} ABOUT
            %a.nav-link{href: "#page-nav-share", target: "_self"} CONTACT
    .section.hero
      .w-container
        .w-row
          .w-col.w-col-6
            %h1.hero-header
              Pick a translationÂ 
            .w-form
              %form{"data-name" => "Email Form", name: "post[email-form]", action: "post"}
                %select.w-select{"data-name" => "Pick a translation", name: "pick-a-translation", required: "required"}
                  %option{value: ""} Select one...
                  %option{value: "bart_simpson"} Bart Simpson
                  %option{value: "FlipTalk"} FlipTalk
                  %option{value: "flinstone"} Fred Flinstone
                %textarea#langlish-input.w-input{placeholder: "Please enter your text"}
                %textarea#langlish-output.w-input{placeholder: "Your new text will show here"}
              .w-form-done
                %p Thank you! Your submission has been received!
              .w-form-fail
                %p Oops! Something went wrong while submitting the form :(
            %a#transform-text.button
              Transform it!
            %p
          .w-col.w-col-6.call-to-action
    #page-nav-organize.section.white
    %script{src: "https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js", type: "text/javascript"}
